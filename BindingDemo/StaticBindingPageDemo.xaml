<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BindingDemo"
             x:Class="BindingDemo.StaticBindingPageDemo"
             Title="StaticBindingPageDemo">
    <!--Bind to a static value that belongs to the Parent page-->
    <VerticalStackLayout Margin="20" Spacing="10">
        <Label 
            Text="Bind to a static property:" />
        <Label Text="{x:Static local:StaticBindingPageDemo.Value}"/>
    </VerticalStackLayout>
</ContentPage>